                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/telephonyTitle"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/txt_telephony"
                                android:layout_weight="1"
                                />
                            <RadioGroup
                                android:id="@+id/radioTelephony"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                >

                                <RadioButton
                                    android:id="@+id/btnTelephonyYes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/btn_text_yes"
                                    android:checked="false"
                                    />

                                <RadioButton
                                    android:id="@+id/btnTelephonyNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/btn_text_no"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginStart="20dp"
                                    android:checked="true"/>


                            </RadioGroup>
                        </TableRow>


                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/TelCont"
                    android:gravity="center">

                    <RadioGroup
                        android:id="@+id/TelephonyRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <RadioButton
                            android:id="@+id/btnTelBasGamme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_bas_gamme_text"
                            android:enabled="false"
                            android:checked="true"
                            />

                        <RadioButton
                            android:id="@+id/btnTelHautGamme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="@string/btn_haut_gamme_text"/>

                    </RadioGroup>

                </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/accessoir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/telephony"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="5dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">
                <TextView
                    android:id="@+id/accessoirTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/text_accessoire_title"
                    android:textColor="@color/colorPrimaryDark"/>

                <LinearLayout
                    android:id="@+id/AccssCont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/accessoirTitle"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/text_accessoire_title"
                                android:layout_weight="1"
                                />
                            <RadioGroup
                                android:id="@+id/radioAccessoir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                >

                                <RadioButton
                                    android:id="@+id/btnAccessYes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/btn_text_yes"
                                    android:checked="false"
                                    />

                                <RadioButton
                                    android:id="@+id/btnAccessNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/btn_text_no"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginStart="20dp"
                                    android:checked="true"/>


                            </RadioGroup>
                        </TableRow>


                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/AccssCont"
                    android:gravity="center">

                    <RadioGroup
                        android:id="@+id/AccessGammeRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <RadioButton
                            android:id="@+id/btnAccssBasGamme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_bas_gamme_text"
                            android:enabled="false"
                            android:checked="true"
                            />

                        <RadioButton
                            android:id="@+id/btnAccessHautGamme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="@string/btn_haut_gamme_text"/>

                    </RadioGroup>

                </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnAddValidUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_add_user_valid"
            android:background="@drawable/btn_red_round"
            android:textColor="@color/colorwhite"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/accessoir"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>